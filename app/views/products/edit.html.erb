<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
<h1>Update <%=@product.name  %></h1>
<%= simple_form_for @product do |f| %>
  <%= f.input :name, placeholder: 'Product name please', error: 'Product name is mandatory, please specify one' %>
  <%= f.input :details %>
  <%= f.input :price, placeholder: 'Price per day'%>
  <%= f.input :category, collection: Product::CATEGORY %>
  <%= f.input :photo, as: :file %>
  <div class="btn btn-primary">
  <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Back to products", products_path %>
 </div>
  </div>
</div>
