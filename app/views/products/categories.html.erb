<div class="home-banner<%= @category.downcase %>">
    <h1>Travel the world <strong>by <%= @category %></strong></h1>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container">

  <div class="product-grid">
    <% @products.each do |product| %>
    <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.attached? ? product.photo.key : "pn4d9wzxnc9advmnrniw", width: 400, height: 300, crop: :fill %>');">
      <h3><%= link_to "#{product.name}", product_path(product.id) %></h3>
    </div>
    <% end %>
  </div>
</div>
</div>
