
<div class="home-banner">
    <h1>Travel the world <strong>in style</strong></h1>
</div>
<div class="container">


  <div class="product-grid">
    <% @products.each do |product| %>
    <div class="product-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.attached? ? product.photo.key : "pn4d9wzxnc9advmnrniw", width: 400, height: 300, crop: :fill %>');">
      <h3><%= link_to "#{product.name}", product_path(product.id) %></h3>
    </div>
    <% end %>
  </div>
</div>
</div>

<% if policy(Product).create? %>
  <%= link_to "Add a new product", new_product_path %>
<% end %>

